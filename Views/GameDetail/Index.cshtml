@{
    ViewData["Title"] = ViewBag.Game.Title;
}

<head>
    <link rel="stylesheet" href="~/static/css/downloadPage.css">
</head>
<h4 class="fs-4 mb-4 ps-3">@ViewBag.Game.Title</h4>

<!-------------start SCREENSHOT --------------->
<div class="screenshots container">

    <div class="screenshots-content">
        <img src="~/images/game/@ViewBag.Game.ImgPath" alt="">
        @* <img src="~/static/img/screenshots2.jpg" alt="">
        <img src="~/static/img/screenshots3.jpg" alt="">
        <img src="~/static/img/trending6.jpg" alt="">
        <img src="~/static/img/trending7.png" alt="">
        <img src="~/static/img/trending8.png" alt=""> *@
    </div>
</div>
<!-------------end SCREENSHOT --------------->

<!-------------start ABOUT --------------->
<div class="about container">
    <h2>Description</h2>
    <div class="d-flex">
        <div class="about-info">
            <p>@ViewBag.Game.Description</p>
        </div>

        <table class="about-table table text-light table-dark table-striped align-middle">
            <tbody>
                <tr>
                    <td class="py-3">Name:</td>
                    <td class="py-3">@ViewBag.Game.Title</td>
                </tr>
                <tr>
                    <td class="py-3">Release Date</td>
                    <td class="py-3">@ViewBag.Game.ReleaseDate.ToString("dd/MM/yyyy")</td>
                </tr>
                @* <tr>
                    <td class="py-3">Developer:</td>
                    <td class="py-3">Dao Tien Dat</td>
                </tr>
                <tr>
                    <td class="py-3">Publisher:</td>
                    <td class="py-3">PlayStation PC LLC</td>
                </tr>
                <tr>
                    <td class="py-3">Category:</td>
                    <td class="py-3">Action, Single Player, Pixel, Indie, Adventure, Rich Story</td>
                </tr> *@
                <tr>
                    <td class="py-3">Status</td>
                    @if (ViewBag.Game.Status == "active")
                    {
                        <td class="py-3 text-success">Available</td>
                    }
                    else
                    {
                        <td class="py-3 text-danger">Unavailable</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-end price">
        <p class="fs-3 text-primary">đ @ViewBag.Game.Price.ToString("N0")</p>
    </div>
    <div class="d-flex" style="justify-content: flex-end;">
        <div class="button-container">

            <div class="d-flex more-btn">
                <button class="button buy-now">Mua ngay</button>
                <button class="button">Thêm vào giỏ</button>

            </div>
        </div>
    </div>

</div>
<!-------------end ABOUT --------------->

<!-------------start DOWNLOAD LINK --------------->
<div class="download">
    <a download="deTenGameVaoDay" href="deLinkDownloadGameVao" class="download-links"></a>
</div>
<!-------------end DOWNLOAD LINK --------------->