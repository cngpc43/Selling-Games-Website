@model IS220_WebApplication.Models.ViewModel.CombinedViewModel
@{
    ViewData["Title"] = "User Profile";
}
<link rel="stylesheet" href="~/static/css/userProfile.css">

<div class="container flex-grow-1 my-4">
    <div class="opt card overflow-hidden">
        <div class="row no-gutters">
            <div class="col-md-3">
                <div class="list-group list-group-flush account-settings-links rounded">
                    <a class="list-group-item list-group-item-action active fs-5 py-3" data-toggle="list"
                        href="javascript:void(0);">
                        User information
                    </a>
                    <a class="list-group-item list-group-item-action fs-5 py-3" data-toggle="list"
                        href="javascript:void(0);">
                        Manage address
                    </a>
                    <a class="list-group-item list-group-item-action fs-5 py-3" data-toggle="list"
                        href="javascript:void(0);">
                        Change password
                    </a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="tab-content">
                    <div class="tab-pane fade active show tab" id="account-general">
                        <form asp-controller="profile" asp-action="update" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="card-body media align-items-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt
                                    class="d-block ui-w-80">
                                <div class="media-body ml-4 mt-3">
                                    <label class="btn btn-outline-primary">
                                        Upload avatar
                                        <input type="file" class="account-settings-fileinput">
                                    </label>
                                </div>
                            </div>

                            <hr class="border-light m-0">


                            <div class="card-body">

                                <div class="form-group mt-2">
                                    <label class="form-label">Username</label>
                                    <h1>@Model.User!.UserName</h1>
                                </div>
                                <div class="form-group mt-4">
                                    <label class="form-label">E-mail</label>
                                    <h2>@Model.User!.Email
                                        @if (Model.User.EmailConfirmed == false)
                                        {
                                            <button id="verifyButton" type="button"
                                                class="btn btn-link btn-sm ms-0 pb-2">Verify</button>
                                        }
                                        else
                                        {
                                            <label class="badge badge-success" style="color: #0D811D">Verified</label>
                                        }
                                    </h2>
                                </div>
                                <div class="d-flex mt-4">
                                    <div class="form-group w-50 me-1">
                                        <label class="form-label">First name</label>
                                        <input type="text" class="form-control" asp-for="User!.Firstname"
                                            value="@Model.User.Firstname">
                                    </div>
                                    <div class="form-group w-50 ms-1">
                                        <label class="form-label">Last name</label>
                                        <input type="text" class="form-control" asp-for="User!.Lastname"
                                            value="@Model.User.Lastname">
                                    </div>
                                </div>
                            </div>

                            <hr class="border-light m-0">

                            <div class="card-body pb-2">
                                <div class="form-group mt-4">
                                    <label class="form-label">Birth</label>
                                    <input type="date" class="form-control" asp-for="User!.Birth"
                                        value="@(Model.User.Birth.HasValue ? Model.User.Birth.Value.ToString("yyyy-MM-dd") : string.Empty)">
                                </div>
                                <div class="form-group mt-4">
                                    <label class="form-label">Phone</label>
                                    <input type="text" class="form-control" asp-for="User!.Phone"
                                        value="@Model.User.Phone">
                                </div>
                            </div>

                            <div class="text-end mt-3">
                                <button type="submit" class="btn btn-primary">SAVE</button>&nbsp;
                                <button type="button" class="btn btn-secondary">CANCEL</button>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade tab" id="manage-address">
