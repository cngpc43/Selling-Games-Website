@model IS220_WebApplication.Models.ViewModel.CombinedViewModel
@{
    ViewData["Title"] = "New Game";
}
<link rel="stylesheet" href="~/static/css/gamePage.css">

<!-------------start GAMES MOI SECTION --------------->
<section class="category" id="new">
    <div class="heading">
        <i class="bx bx-game"></i>
        <h2>GAMES Má»šI</h2>
    </div>

    <!-- Content -->
    <div class="category-content">
        @foreach (var item in Model.NewGame!)
        {
            <div class="box">
                <a asp-controller="gamedetail" asp-action="index" asp-route-title="@item.Title.ToUrlFriendly()" asp-route-id="@item.Id">
                                    <img src="~/images/game/@item.Imgpath" alt=""/>
                                </a>
                <div class="box-text">
                    <h2><a asp-controller="gamedetail" asp-action="index" asp-route-title="@item.Title.ToUrlFriendly()" asp-route-id="@item.Id">@item.Title</a></h2>
                    <h3>@string.Join(", ", item.Categories.Select(c => c.Name))</h3>
                    <div class="rating-download">
                        <div class="rating">
                            <i class="bx bxs-star"></i>
                            <span>4.7</span>
                        </div>

                        <a class="box-btn" asp-controller="gamedetail" asp-action="index" asp-route-title="@item.Title.ToUrlFriendly()" asp-route-id="@item.Id">
                            <p>@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C}", item.Price)</p>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- PAGINATION -->
    <div class="pagination">
        @for (var i = 1; i <= Math.Ceiling((double)Model.TotalCount / 10); i++)
        {
            var i1 = i;
            <a class="link" asp-controller="newgame" asp-action="index" asp-route-page="@i1">@i1</a>
        }
    </div>
</section>
<!-------------end GAMES MOI SECTION --------------->

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>