<!DOCTYPE html>
<html lang="vi en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    @* ------------------------- FAVICON ------------------------- *@
    <link rel="shortcut icon" href="~/favicon.png" type="image/x-icon"/>

    @* ------------------------- TITLE ------------------------- *@
    <title>@ViewData["Title"] - NETGame</title>

    @* ------------------------- CSS LINK ------------------------- *@
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/static/css/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    @* <link rel="stylesheet" href="~/IS220_WebApplication.styles.css" asp-append-version="true"/> *@
    <link rel="stylesheet" href="~/static/css/reset.css" asp-append-version="true">
    @* MAIN *@
    <link rel="stylesheet" href="~/static/css/main.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/static/css/responsive.css" asp-append-version="true">
</head>

<body>
@* PROGRESS BAR (custom scroll-bar) *@
<div class="progress">
    <div class="progress-bar" id="scroll-bar"></div>
</div>

@* ------------------------ start HEADER ------------------------ *@
<header class="header">
    <nav class="nav container">
        <!-- LOGO -->
        <a asp-controller="Home" asp-action="Index" class="logo">NET<span>Game</span></a>

        <!-- NAV ICON -->
        <div class="nav-content">
            <!-- MENU -->
            <div class="menu">
                <ul class="navbarr">
                    <li>
                        <a href="/#home">TRANG CHỦ</a>
                    </li>
                    <li>
                        <a href="/#trending">GAMES HOT</a>
                    </li>
                    <li>
                        <a href="/#new">GAMES MỚI</a>
                    </li>
                    <li>
                        <a href="/#viethoa">GAMES VIỆT HÓA</a>
                    </li>
                    <li>
                        <a href="/#contact">LIÊN HỆ</a>
                    </li>
                </ul>
            </div>

            <a class="bx bx-shopping-bag" id="storage-icon" asp-controller="UserStorage" asp-action="UserStorage"></a>
            <i class='bx bx-user user-icon'></i>

            @* DEVICE: MOBILE *@
            <div class="menu-icon">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
        </div>

        <div class="user-setting">
            <div class="profile">
                <a asp-controller="UserProfile" asp-action="UserProfile">Tài khoản</a>
            </div>
            <div class="cart">
                <a asp-controller="" asp-action="">Giỏ hàng</a>
            </div>
            <div class="logout">
                            <form asp-controller="account" asp-action="logout" method="post">
                                <a href="#" class="nav-author__signout" onclick="event.preventDefault(); this.closest('form').submit();">
                                    Sign Out
                                </a>
                            </form>
                        </div>
        </div>
    </nav>
</header>

@* ------------------------- start MAIN (change in Views/Home/Index.cshtml) ------------------------- *@
<div class="container">
    <main role="main">
        @RenderBody()
    </main>
</div>
@* ------------------------- end MAIN ------------------------- *@

@* ------------------------- start FOOTER ------------------------- *@
