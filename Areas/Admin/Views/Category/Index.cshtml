@{
    Layout = "_DashboardLayout";
}

<div class="contents">

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="contact-breadcrumb">
                <div class="breadcrumb-main add-contact justify-content-sm-between ">
                    <div class="breadcrumb-main__wrapper">
                        <form asp-area="admin" asp-controller="category" asp-action="index" method="get" class="d-flex align-items-center add-contact__form my-sm-0 my-2">
                            <img src="~/admin/img/svg/search.svg" alt="search" class="svg">
                            <input name="searchQuery" class="form-control me-sm-2 border-0 box-shadow-none" type="search" placeholder="Search by Name" aria-label="Search">
                        </form>
                    </div>
                </div>
            </div>
            <!-- ends: contact-breadcrumb -->
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-30">
            <div class="card">
                <div class="card-header color-dark fw-500">
                    Game List
                </div>
                <div class="card-body">

                    <div class="userDatatable userDatatable--ticket userDatatable--ticket--2 mt-1">
                        <div class="table-responsive">
                            <table class="table mb-0 table-borderless">
                                <thead>
                                <tr class="userDatatable-header">
                                    <th>
                                        <span class="userDatatable-title">ID</span>
                                    </th>
                                    <th>
                                        <span class="userDatatable-title">Title</span>
                                    </th>
                                    <th class="actions">
                                        <span class="userDatatable-title">Actions</span>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                <form method="post" asp-area="admin" asp-controller="category">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>
                                                <div class="userDatatable-content--priority">
                                                    @item.Name
                                                </div>
                                            </td>
                                           
                                            <td>
                                                <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                                    <li>
                                                        <a href="javascript:void(0);" onclick="editWindow('category',@item.Id);" class="edit">
                                                            <i class="uil uil-edit"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                </form>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-sm-end justify-content-start pt-25">

                            <nav class="dm-page ">
                                <ul class="dm-pagination d-flex">
                                    <li class="dm-pagination__item">
                                                @if (ViewBag.PageNumber > 1)
                                                {
                                                    <a asp-action="Index" asp-route-page="@(ViewBag.PageNumber - 1)" class="dm-pagination__link pagination-control">
                                                        <span class="la la-angle-left"></span>
                                                    </a>
                                                }
                                                @for (var i = 1; i <= ViewBag.TotalPages; i++)
                                                {
                                                    <a asp-action="Index" asp-route-page="@i" class="dm-pagination__link @(i == ViewBag.PageNumber ? "active" : "")">
                                                        <span class="page-number">@i</span>
                                                    </a>
                                                }
                                                @if (ViewBag.PageNumber < ViewBag.TotalPages)
                                                {
                                                    <a asp-action="Index" asp-route-page="@(ViewBag.PageNumber + 1)" class="dm-pagination__link pagination-control">
                                                        <span class="la la-angle-right"></span>
                                                    </a>
                                                }
                                            </li>
                                    @* <li class="dm-pagination__item"> *@
                                    @*     <a href="#" class="dm-pagination__link pagination-control"> *@
                                    @*         <span class="la la-angle-left"></span> *@
                                    @*     </a> *@
                                    @*     <a href="#" class="dm-pagination__link"> *@
                                    @*         <span class="page-number">1</span> *@
                                    @*     </a> *@
                                    @*     <a href="#" class="dm-pagination__link active"> *@
                                    @*         <span class="page-number">2</span> *@
                                    @*     </a> *@
                                    @*     <a href="#" class="dm-pagination__link"> *@
                                    @*         <span class="page-number">3</span> *@
                                    @*     </a> *@
                                    @*     <a href="#" class="dm-pagination__link pagination-control"> *@
                                    @*         <span class="page-number">...</span> *@
                                    @*     </a> *@
                                    @*     <a href="#" class="dm-pagination__link"> *@
                                    @*         <span class="page-number">12</span> *@
                                    @*     </a> *@
                                    @*     <a href="#" class="dm-pagination__link pagination-control"> *@
                                    @*         <span class="la la-angle-right"></span> *@
                                    @*     </a> *@
                                    @*     <a href="#" class="dm-pagination__option"> *@
                                    @*     </a> *@
                                    @* </li> *@
                                    @* <li class="dm-pagination__item"> *@
                                    @*     <div class="paging-option"> *@
                                    @*         <select name="page-number" class="page-selection"> *@
                                    @*             <option value="20">20/page</option> *@
                                    @*             <option value="40">40/page</option> *@
                                    @*             <option value="60">60/page</option> *@
                                    @*         </select> *@
                                    @*     </div> *@
                                    @* </li> *@
                                </ul>
                            </nav>


                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

</div>