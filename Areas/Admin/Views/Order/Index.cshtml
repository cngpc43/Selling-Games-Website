            </thead>
            <tbody>

            @foreach (var order in Model.CompletedOrders)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="me-3 d-flex align-items-center">
                                <div class="checkbox-group-wrapper">
                                    <div class="checkbox-group d-flex">
                                        <div class="checkbox-theme-default custom-checkbox checkbox-group__single d-flex">
                                            <input class="checkbox" type="checkbox" id="check-grp-12">
                                            <label for="check-grp-12"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="orderDatatable-title">
                                <p class="d-block mb-0">
                                    @order.Id
                                </p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="orderDatatable-title">
                            @order.UidNavigation.Email
                        </div>
                    </td>
                    <td>
                        @switch (order.Status)
                        {
                            case 1U:
                                <div class="orderDatatable-status d-inline-block">
                                    <span class="order-bg-opacity-warning  text-warning rounded-pill active">Pending</span>
                                </div>
                                break;

                            case 2U:
                                <div class="orderDatatable-status d-inline-block">
                                    <span class="order-bg-opacity-success text-success rounded-pill active">Confirmed</span>
                                </div>
                                break;

                            case 3U:
                                <div class="orderDatatable-status d-inline-block">
                                    <span class="order-bg-opacity-success text-success rounded-pill active">Completed</span>
                                </div>
                                break;

                            case 4U:
                                <div class="orderDatatable-status d-inline-block">
                                    <span class="order-bg-opacity-danger  text-danger rounded-pill active">Canceled</span>
                                </div>
                                break;
                        }
                    </td>
                    <td>
                        <div class="orderDatatable-title">
                            @{
                                var total = order.OrderDetails.Aggregate(0, (current, orderDetail) => (int)(current + orderDetail.Price * (orderDetail.Quantity ?? 0)));
                            }
                            @string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C}", total)
                        </div>
                    </td>
                    <td>
                        <div class="orderDatatable-title float-end">
                            @order.Date
                        </div>
                    </td>

                    <td style="position: relative;  overflow: visible;">
                        <ul class="orderDatatable_actions mb-0 d-flex flex-wrap float-end">

                            <li>
                                <a asp-controller="Order" asp-action="Index" asp-route-id="@order.Id" class="view">
                                    <i class="uil uil-eye"></i>
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
                <!-- End: tr -->
            }
            <!-- End: tr -->

            </tbody>
        </table>
    </div>
    <!-- Table Responsive End -->
</div>

