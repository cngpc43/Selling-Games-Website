                </th>
                <th>
                    <span class="userDatatable-title">Amount</span>
                </th>
                <th>
                    <span class="userDatatable-title float-end">Date</span>
                </th>
                <th>
                    <span class="userDatatable-title float-end">Actions</span>
                </th>
            </tr>
            </thead>
            <tbody>

            @foreach (var order in Model.AllOrders)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="me-3 d-flex align-items-center">
                                <div class="checkbox-group-wrapper">
                                    <div class="checkbox-group d-flex">
                                        <div class="checkbox-theme-default custom-checkbox checkbox-group__single d-flex">
                                            <input class="checkbox" type="checkbox" id="check-grp-12">
                                            <label for="check-grp-12"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="orderDatatable-title">
                                <p class="d-block mb-0">
                                    @order.Id
                                </p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="orderDatatable-title">
                            @order.UidNavigation.Email
                        </div>
                    </td>
                    <td>
                        @switch (order.Status)
                        {
                            case 1U:
                                <div class="orderDatatable-status d-inline-block">
                                    <span class="order-bg-opacity-warning  text-warning rounded-pill active">Pending</span>
                                </div>
                                break;

                            case 2U:
                                <div class="orderDatatable-status d-inline-block">
                                    <span class="order-bg-opacity-success text-success rounded-pill active">Confirmed</span>
                                </div>
                                break;

                            case 3U:
                                <div class="orderDatatable-status d-inline-block">
                                    <span class="order-bg-opacity-success text-success rounded-pill active">Completed</span>
                                </div>
                                break;

                            case 4U:
                                <div class="orderDatatable-status d-inline-block">
                                    <span class="order-bg-opacity-danger  text-danger rounded-pill active">Canceled</span>
                                </div>
                                break;
                        }
                    </td>
                    <td>
                        <div class="orderDatatable-title">
                            @{
                                var total = order.OrderDetails.Aggregate(0, (current, orderDetail) => (int)(current + orderDetail.Price * (orderDetail.Quantity ?? 0)));
                            }
                            @string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C}", total)
                        </div>
                    </td>
                    <td>
                        <div class="orderDatatable-title float-end">
                            @order.Date
                        </div>
                    </td>

                    <td style="position: relative;  overflow: visible;">
                        <ul class="orderDatatable_actions mb-0 d-flex flex-wrap float-end">
                            <div class="dropdown dropdown-click">
                                <div class="btn-group dropleft">
                                    <button class="btn btn-outline-lighten btn-sm">Status</button>


                                    <button type="button" class="btn btn-outline-lighten btn-sm dropdown-toggle-split" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" @(order.Status == 1 || order.Status == 2 ? "" : "disabled")>
                                        <img src="~/admin/img/svg/chevron-down.svg" alt="chevron-down" class="svg">
                                    </button>

                                    <div class="dropdown-default dropdown-menu" style="position: absolute; z-index: 999;">


                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="UpdateStatus" asp-route-status="2" asp-route-orderId="@order.Id">Confirmed</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="UpdateStatus" asp-route-status="4" asp-route-orderId="@order.Id">Canceled</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="UpdateStatus" asp-route-status="3" asp-route-orderId="@order.Id">Completed</a>

                                    </div>
                                </div>
                            </div>
                            <li>
                                <a asp-controller="Order" asp-action="Index" asp-route-id="@order.Id" class="view">
                                    <i class="uil uil-eye"></i>
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
                <!-- End: tr -->
            }

            </tbody>
